@using Chow.Shared
@using System.Net.Security

<div class="dish">
  <DishImage Dish="@Dish" />
  <div class="dish-details">
    <div class="dish-name">@Dish.Name</div>
    <div class="dish-price">Â£@Dish.Price</div>
  </div>
  <button @onclick="@(() => OnToggleSelected.InvokeAsync(Dish))">
    @if (IsSelected)
    {
      <RemoveIcon />
    }
    else
    {
      <AddIcon />
    }
  </button>
</div>

@code {

  [Parameter]
  public Dish Dish { get; set; }

  [Parameter]
  public bool IsSelected { get; set; }

  [Parameter]
  public EventCallback<Dish> OnToggleSelected { get; set; }

}